#!/data/data/com.termux/files/usr/bin/bash

function exit_with_error(){
    echo "$1" >&2
    exit 1
}


if [[ -z "$1" ]];then
    exit_with_error "Give a file or path to files."

elif [[ ! -f "$1" && ! -d "$1" ]]; then
    exit_with_error "No such file or directory."
fi


isort -q --honor-noqa --reverse-relative --skip-glob "**__init__.py" "$1"
black -q -l 100 "$1"
autoflake --quiet --in-place --recursive --remove-all-unused-imports --remove-unused-variables --ignore-init-module-imports "$1"
